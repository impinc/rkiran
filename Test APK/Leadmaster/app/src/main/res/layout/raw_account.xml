<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_shadow"
        android:elevation="2dp"
        android:collapseColumns="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entered :"
                android:textAppearance="?android:attr/textAppearance"
                android:paddingLeft="10dp"
                android:id="@+id/txtentered" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearance"
                android:paddingLeft="10dp"
                android:id="@+id/txentered" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact :"
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txtcontact" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txcontact" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account :"
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txtaccount" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txaccount" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lead Status :"
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txtleadstatus" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txleadstatus" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compaign :"
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txtcompaign" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txcompaign" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acct Mgr :"
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txtaccmgr" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txaccmgr" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone :"
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txtphone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearance"
                android:id="@+id/txphone" />

        </TableRow>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Select"
                android:textColor="#E91E63"
                android:layout_marginLeft="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/button6"
                />

            <Button
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Add"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/button7"
                android:textColor="#E91E63"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button6"
                android:layout_toEndOf="@+id/button6" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/map"
                android:id="@+id/button8"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button11"
                android:layout_toEndOf="@+id/button11" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/edit"
                android:id="@+id/button9"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button7"
                android:layout_toEndOf="@+id/button7" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cal"
                android:id="@+id/button10"

                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button9"
                android:layout_toEndOf="@+id/button9" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/delete"
                android:id="@+id/button11"

                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button10"
                android:layout_toEndOf="@+id/button10" />

        </RelativeLayout>
    </TableLayout>


</android.support.design.widget.CoordinatorLayout>